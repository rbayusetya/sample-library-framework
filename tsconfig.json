{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist" // Output directory for compiled JS
  },
  "include": ["**/*.ts"], // Look for TypeScript files everywhere
  "exclude": ["node_modules"]
}